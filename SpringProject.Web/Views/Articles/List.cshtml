@model List<SpringProject.Web.Models.Domain.Article>
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Articles</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Title</td>
                    <td>Images</td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)
                {
                    <tr>
                        <td>@article.ArticleID</td>
                        <td>@article.ArticleTitle</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var image in article.ProductImages)
                                {
                                    <span class="badge bg-secondary me-1">@image.ImageTitle</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="Articles" asp-action="Edit" asp-route-id="@article.ArticleID">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Articles Found.</p>
    }
</div>